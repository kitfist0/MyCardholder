<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/cardholder_navigation">

    <navigation
        android:id="@+id/scanner_navigation"
        app:startDestination="@id/permission_fragment">

        <fragment
            android:id="@+id/permission_fragment"
            android:name="my.cardholder.ui.scanner.permission.ScannerPermissionFragment"
            android:label="@string/permission_request"
            tools:layout="@layout/fragment_scanner_permission">
            <action
                android:id="@+id/from_permission_to_preview"
                app:destination="@id/preview_fragment"
                app:popUpTo="@id/scanner_navigation"
                app:popUpToInclusive="false" />
        </fragment>

        <fragment
            android:id="@+id/preview_fragment"
            android:name="my.cardholder.ui.scanner.preview.ScannerPreviewFragment"
            android:label="@string/title_scanner"
            tools:layout="@layout/fragment_scanner_preview">
            <action
                android:id="@+id/from_preview_to_cardholder"
                app:destination="@id/cardholder_navigation" />
        </fragment>

    </navigation>

    <navigation
        android:id="@+id/cardholder_navigation"
        app:startDestination="@id/cards_fragment">

        <fragment
            android:id="@+id/cards_fragment"
            android:name="my.cardholder.ui.cardholder.cards.CardholderCardsFragment"
            android:label="@string/title_cards"
            tools:layout="@layout/fragment_cardholder_cards">
            <action
                android:id="@+id/from_cards_to_viewer"
                app:destination="@id/viewer_fragment" />
        </fragment>

        <fragment
            android:id="@+id/viewer_fragment"
            android:name="my.cardholder.ui.cardholder.viewer.CardholderViewerFragment"
            android:label="@string/title_card"
            tools:layout="@layout/fragment_cardholder_viewer">
            <argument
                android:name="card_id"
                app:argType="long" />
            <action
                android:id="@+id/from_viewer_to_editor"
                app:destination="@id/editor_fragment" />
        </fragment>

        <fragment
            android:id="@+id/editor_fragment"
            android:name="my.cardholder.ui.cardholder.editor.CardholderEditorFragment"
            android:label="@string/card_edit"
            tools:layout="@layout/fragment_cardholder_editor">
            <argument
                android:name="card_id"
                app:argType="long" />
            <action
                android:id="@+id/from_editor_to_colors"
                app:destination="@id/colors_fragment" />
        </fragment>

        <dialog
            android:id="@+id/colors_fragment"
            android:name="my.cardholder.ui.cardholder.colors.CardholderColorsFragment"
            android:label="@string/card_color"
            tools:layout="@layout/fragment_cardholder_colors">
            <argument
                android:name="card_id"
                app:argType="long" />
        </dialog>

    </navigation>

    <fragment
        android:id="@+id/settings_fragment"
        android:name="my.cardholder.ui.settings.SettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_settings" />

</navigation>
