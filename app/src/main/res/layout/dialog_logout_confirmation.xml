<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingVertical="@dimen/bottom_sheet_root_vertical_padding"
    tools:context=".ui.cloud.logout.LogoutConfirmationDialog">

    <TextView
        android:id="@+id/logout_confirmation_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/bottom_sheet_view_padding"
        android:text="@string/cloud_logout_confirmation_title_text"
        android:textAppearance="@style/TextAppearance.Material3.TitleSmall" />

    <TextView
        android:id="@+id/logout_confirmation_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_sheet_button_height"
        android:background="?selectableItemBackground"
        android:drawablePadding="@dimen/bottom_sheet_button_drawable_padding"
        android:gravity="center_vertical"
        android:padding="@dimen/bottom_sheet_view_padding"
        android:text="@string/cloud_logout_confirmation_button_text"
        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
        android:textColor="?colorError"
        app:drawableStartCompat="@drawable/ic_cloud_off"
        app:drawableTint="?colorError" />

</LinearLayout>
