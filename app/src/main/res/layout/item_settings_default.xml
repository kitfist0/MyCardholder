<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="4dp"
    app:cardElevation="0dp"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:padding="@dimen/settings_item_content_padding">

        <ImageView
            android:id="@+id/item_settings_default_image"
            android:layout_width="@dimen/settings_item_image_size"
            android:layout_height="@dimen/settings_item_image_size"
            android:src="@drawable/ic_circle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="?colorControlNormal"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/item_settings_default_title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:paddingHorizontal="@dimen/settings_item_text_horizontal_padding"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            app:layout_constraintBottom_toTopOf="@id/item_settings_default_subtitle_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/item_settings_default_image"
            app:layout_constraintTop_toTopOf="@id/item_settings_default_image"
            tools:text="Item title" />

        <TextView
            android:id="@+id/item_settings_default_subtitle_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:paddingHorizontal="@dimen/settings_item_text_horizontal_padding"
            android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
            app:layout_constraintBottom_toBottomOf="@id/item_settings_default_image"
            app:layout_constraintStart_toEndOf="@id/item_settings_default_image"
            app:layout_constraintStart_toStartOf="@id/item_settings_default_title_text"
            app:layout_constraintTop_toBottomOf="@id/item_settings_default_title_text"
            tools:text="Subtitle text" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
