<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.cloud.login.CloudLoginFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/cloud_login_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/cloud_login_toolbar_title" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cloud_login_google_cloud_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:backgroundTint="?colorSurfaceContainer"
        app:contentPadding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cloud_login_toolbar"
        app:strokeWidth="0dp">

        <TextView
            android:id="@+id/cloud_login_google_cloud_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:text="Google Drive"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            app:drawableStartCompat="@drawable/ic_cloud_google"
            tools:ignore="HardcodedText" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cloud_login_yandex_cloud_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:backgroundTint="?colorSurfaceContainer"
        app:contentPadding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cloud_login_google_cloud_card"
        app:strokeWidth="0dp"
        tools:backgroundTint="?colorSecondaryContainer">

        <TextView
            android:id="@+id/cloud_login_yandex_cloud_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:text="Yandex Disk"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            app:drawableStartCompat="@drawable/ic_cloud_yandex"
            tools:drawableEnd="@drawable/ic_done"
            tools:ignore="HardcodedText" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/cloud_login_help_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginVertical="8dp"
        android:gravity="center_vertical"
        android:text="@string/cloud_login_help_text"
        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cloud_login_yandex_cloud_card" />

    <ProgressBar
        android:id="@+id/cloud_login_loading_progress"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toTopOf="@id/cloud_login_fab"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cloud_login_help_text"
        tools:progress="50" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/cloud_login_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:text="@string/cloud_login_fab_text"
        app:icon="@drawable/ic_login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
