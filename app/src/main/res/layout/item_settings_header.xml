<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:backgroundTint="?colorPrimaryContainer"
    app:strokeWidth="0dp">

    <TextView
        android:id="@+id/item_settings_header_text"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:drawablePadding="16dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:padding="16dp"
        android:text="@string/settings_cloud_sync_switch_off_text"
        android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
        app:drawableEndCompat="@drawable/ic_cloud_off"
        app:drawableTint="?colorOnPrimaryContainer" />

</com.google.android.material.card.MaterialCardView>
