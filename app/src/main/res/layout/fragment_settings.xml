<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.settings.SettingsFragment">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:backgroundTint="?colorPrimaryContainer"
            app:strokeWidth="0dp">

            <TextView
                android:id="@+id/settings_header_text"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:drawablePadding="16dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:padding="16dp"
                android:text="@string/settings_cloud_sync_switch_off_text"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                app:drawableEndCompat="@drawable/ic_cloud_off"
                app:drawableTint="?colorOnPrimaryContainer" />

        </com.google.android.material.card.MaterialCardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/settings_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="@dimen/cardholder_recycler_view_padding_horizontal"
            tools:itemCount="6"
            tools:listitem="@layout/item_settings_default" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
