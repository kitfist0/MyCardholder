<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MyCardholder" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/cardholder_color_primary_day</item>
        <item name="colorOnPrimary">@color/cardholder_color_on_primary_day</item>
        <item name="colorPrimaryContainer">@color/cardholder_color_primary_container_day</item>
        <item name="colorOnPrimaryContainer">@color/cardholder_color_on_primary_container_day</item>
        <item name="colorSecondary">@color/cardholder_color_secondary_day</item>
        <item name="colorSecondaryContainer">@color/cardholder_color_secondary_container_day</item>
        <item name="colorOnSecondaryContainer">@color/cardholder_color_on_secondary_container_day</item>
        <!-- Status bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Navigation bar -->
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:navigationBarColor">@color/cardholder_color_navigation_bar_day</item>
    </style>

    <style name="Theme.MyCardholder.Splash" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">?android:windowBackground</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@drawable/avd_splash</item>
        <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="s">900</item>
        <item name="postSplashScreenTheme">@style/Theme.MyCardholder</item>
    </style>

</resources>
